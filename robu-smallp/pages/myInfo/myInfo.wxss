page{background-color:rgb(243, 243, 243);margin-left:auto;}

.user-header {
  position: relative;
  width: 100%;
  height: 234rpx;
  color: #fff;
  background: url('http://cdn.jisuapp.cn/zhichi_frontend/static/webapp/images/top_bg.jpg') no-repeat center center;
  background-size: 100% 100%;
}
.user-header .empty-span {
  display:inline-block;
  width:58.59375rpx;
  height:100%;
  vertical-align:middle;
}
.user-header .user-icon {
  width: 116rpx;
  height: 116rpx;
  vertical-align: middle;
  /* line-height: 234rpx; */
  border: 1px solid transparent;
  border-radius: 50%;
}
.user-header .user-txt{
  vertical-align: middle;
  margin-left: 12rpx;
}
.user-header .icon-rightarrow{
  position:absolute;
  top:50%;
  right:32rpx;
  margin-top:-35.15625rpx;
  width:70.3125rpx;
  height:70.3125rpx;
  line-height:70.3125rpx;
  font-size:46.875rpx;
  text-align: center;
}

/* list 样式 */
.info-list {
  /* border-bottom:1px solid #eee; */
}
.info-list .item {
  line-height:30px;
  height:30px;
  padding:7px 10px;
  color:#666;
  border-bottom:1px solid #eee;
  background:#FFF;
  /* border-top:1px solid #eee; */
}
.info-list .item .icon-l {
  float: left;
  margin-right: 20rpx;
  font-size: 40rpx;
}
.info-list .item .user-txt {
  font-size: 30rpx;
  line-height: 20rpx;
  margin-top: -3px;
}
.info-list .item .icon-r {
  float: right;
  color: #aaa;
}
