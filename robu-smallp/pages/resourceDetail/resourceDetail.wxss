.goods-detail-content {
  padding-bottom: 55px;
}
.goods-detail-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 37px;
  padding-top: 5px;
  z-index: 1;
  text-align: center;
  background-color: transparent;
}
.goods-detail-time {
  margin-top: 5px;
  margin-bottom: 10px;
  font-size: 13px;
  color: #aaa;
}
.goods-cover-container {
  width: 700rpx;
  height: 500rpx;
  margin-top:20px;
}
.goods-cover-container image {
  width: 100%;
  height: 100%;
  margin: 0 auto;
  margin-left: 13px;
}
.goods-bottom-opt {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: block;
  text-align: center;
  border-top: 1px solid #ccc;
  background-image: -webkit-linear-gradient(bottom, rgba(226,227,231,0.33) 0%, rgba(248,248,248,0.33) 100%);
  background-image: linear-gradient(to top, rgba(226,227,231,0.33) 0%, rgba(248,248,248,0.33) 100%);
  background-color: #fff;
  -webkit-user-select: none;
  user-select: none;
  font-size: 0;
  overflow: hidden;
  z-index: 2;
}